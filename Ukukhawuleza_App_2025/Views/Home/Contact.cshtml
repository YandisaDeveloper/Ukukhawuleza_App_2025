                    <div class="contact-method">
                        <div class="method-icon">📞</div>
                        <div class="method-content">
                            <h4>Call Us Directly</h4>
                            <p>078 099 4644</p>
                            <p>067 488 5508</p>
                            <a href="tel:0780994644" class="method-action">Call Now</a>
                        </div>
                    </div>

                    <div class="contact-method">
                        <div class="method-icon">✉️</div>
                        <div class="method-content">
                            <h4>Send Us an Email</h4>
                            <p>info@ukukhawuleza.co.za</p>
                            <a href="mailto:info@ukukhawuleza.co.za" class="method-action">Send Email</a>
                        </div>
                    </div>

                    <div class="contact-method">
                        <div class="method-icon">📍</div>
                        <div class="method-content">
                            <h4>Visit Our Offices</h4>
                            <div class="addresses">
                                <div class="address">
                                    <strong>Business Address</strong>
                                    <p>Stand no 410, Badibanise<br>Mount Frere, 5090</p>
                                </div>
                                <div class="address">
                                    <strong>Postal Address</strong>
                                    <p>4751 Monokotswayi Street<br>Windmill Park, Boksburg, 1459</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="uk-quick-actions">
                    <h4>Quick Connect</h4>
                    <div class="action-buttons">
                        <a href="tel:0780994644" class="action-btn call-btn">
                            <span class="action-icon">📞</span>
                            <span>Call Now</span>
                        </a>
                        <a href="mailto:info@ukukhawuleza.co.za" class="action-btn email-btn">
                            <span class="action-icon">✉️</span>
                            <span>Send Email</span>
                        </a>
                        <a href="https://wa.me/270780994644" class="action-btn whatsapp-btn">
                            <span class="action-icon">💬</span>
                            <span>WhatsApp</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="uk-contact-form" data-aos="fade-left">
                <div class="form-header">
                    <h2>Request a Call Back</h2>
                    <p>Leave your details and we'll get back to you within 1 hour</p>
                </div>

                <form id="ukContactForm" class="uk-contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Full Name *</label>
                            <input type="text" id="name" name="name" required placeholder="Enter your full name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address *</label>
                            <input type="email" id="email" name="email" required placeholder="your.email@example.com">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="phone">Phone Number *</label>
                            <input type="tel" id="phone" name="phone" required placeholder="078 099 4644">
                        </div>
                        <div class="form-group">
                            <label for="preferredTime">Preferred Call Time</label>
                            <select id="preferredTime" name="preferredTime">
                                <option value="">Select preferred time</option>
                                <option value="Morning (8AM-12PM)">Morning (8AM-12PM)</option>
                                <option value="Afternoon (12PM-5PM)">Afternoon (12PM-5PM)</option>
                                <option value="Evening (5PM-8PM)">Evening (5PM-8PM)</option>
                                <option value="Anytime">Anytime Today</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="urgency">Urgency Level</label>
                        <div class="urgency-options">
                            <label class="urgency-option">
                                <input type="radio" name="urgency" value="Low">
                                <span class="urgency-label">
                                    <span class="urgency-dot low"></span>
                                    Low Priority
                                </span>
                            </label>
                            <label class="urgency-option">
                                <input type="radio" name="urgency" value="Medium" checked>
                                <span class="urgency-label">
                                    <span class="urgency-dot medium"></span>
                                    Medium Priority
                                </span>
                            </label>
                            <label class="urgency-option">
                                <input type="radio" name="urgency" value="High">
                                <span class="urgency-label">
                                    <span class="urgency-dot high"></span>
                                    High Priority
                                </span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="message">Project Details (Optional)</label>
                        <textarea id="message" name="message" rows="4" placeholder="Briefly describe your project or requirements..."></textarea>
                    </div>

                    <button type="submit" class="uk-submit-btn">
                        <span class="btn-text">Request Call Back</span>
                        <span class="btn-icon">📞</span>
                    </button>

                    <div id="ukContactNotice" class="form-notice" aria-live="polite"></div>
                </form>
            </div>
        </div>
    </div>
</section>

