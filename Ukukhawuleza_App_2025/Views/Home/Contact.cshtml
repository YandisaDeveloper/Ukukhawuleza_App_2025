<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 800,
        once: true,
    });
</script>
<script>
    (function () {
        const COMPANY_EMAIL = "info@companydomain.com";
        const form = document.getElementById("contactForm");
        const notice = document.getElementById("contactNotice");

        function setNotice(text, isError = false) {
            notice.style.display = "block";
            notice.textContent = text;
            notice.style.color = isError ? "#b00020" : "";
            setTimeout(() => {
                notice.style.opacity = 1;
                setTimeout(() => { notice.style.display = "none"; notice.style.opacity = 1; }, 6000);
            }, 0);
        }

        function fallbackCopyTextToClipboard(text) {
            return new Promise((resolve, reject) => {
                const textArea = document.createElement("textarea");
                textArea.value = text;
                textArea.style.position = "fixed";
                textArea.style.top = "-9999px";
                document.body.appendChild(textArea);
                textArea.focus();
                textArea.select();
                try {
                    const successful = document.execCommand('copy');
                    document.body.removeChild(textArea);
                    successful ? resolve() : reject(new Error('execCommand returned false'));
                } catch (err) {
                    document.body.removeChild(textArea);
                    reject(err);
                }
            });
        }

        async function copyToClipboard(text) {
            if (navigator.clipboard && navigator.clipboard.writeText) {
                return navigator.clipboard.writeText(text);
            } else {
                return fallbackCopyTextToClipboard(text);
            }
        }

        function buildEmailBody(fields) {
            return [
                `Call request from website:`,
                ``,
                `Name: ${fields.name || '-'}`,
                `Email: ${fields.email || '-'}`,
                `Phone: ${fields.phone || '-'}`,
                `Preferred Call Time: ${fields.preferredTime || 'Not specified'}`,
                ``,
                '——',
                'This message was prepared automatically. Please press SEND to deliver it to the company.'
            ].join('\n');
        }

        function openMailClient(to, subject, body) {
            const mailto = `mailto:${encodeURIComponent(to)}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            window.location.href = mailto;
        }

        form.addEventListener("submit", async function (e) {
            e.preventDefault();

            const fields = {
                name: document.getElementById("name")?.value.trim(),
                email: document.getElementById("email")?.value.trim(),
                phone: document.getElementById("phone")?.value.trim(),
                preferredTime: document.getElementById("preferredTime")?.value.trim()
            };

            if (!fields.name || !fields.email || !fields.phone) {
                setNotice("Please fill in your name, email, and phone number.", true);
                return;
            }

            const subject = `Call Request from ${fields.name}`;
            const body = buildEmailBody(fields);

            try {
                await copyToClipboard(body);
                setNotice("Request copied to clipboard. Opening your email app...");
                openMailClient(COMPANY_EMAIL, subject, body);
            } catch (err) {
                console.error(err);
                setNotice("Could not copy automatically — opening email app. Please paste your request if needed.", true);
                openMailClient(COMPANY_EMAIL, subject, body);
            }
        });
    })();
</script>

