<section class="cta-banner py-5 text-center" style="background-color: #ffffff; color: #1a2637; position: relative;">
    <div class="container" data-aos="zoom-in">
        <h4 id="cta-headline" class="mb-2 fw-semibold" style="min-height: 2.5rem; transition: opacity 0.5s ease;">Looking for a trusted trading partner? We’ve got you covered!</h4>
        <p id="cta-subtext" class="mb-4 fs-5" style="min-height: 3rem; transition: opacity 0.5s ease;">Partner with Ukukhawuleza Trading Enterprise and take your project to the next level.</p>
      <a href="@Url.Action("Contact", "Home")" class="btn btn-primary btn-lg shadow">Talk to Us</a>
    </div>
    <blockquote class="highlight-box">
        “Delivering excellence with every project, driven by passion and precision.”
    </blockquote>
</section>

<script>
    const ctaData = [
      {
        headline: "Need a reliable partner? Let’s build success together!",
        subtext: "Experience excellence and quality with Ukukhawuleza Trading Enterprise.",
        button: "Get Started",
      },
      {
        headline: "Your trusted trading partner awaits — Join us today!",
        subtext: "Contact us to explore tailored solutions for your project.",
        button: "Request a Call",
      },
      {
        headline: "Ready to grow your business? Partner with us now!",
        subtext: "We deliver quality, reliability, and partnership you can count on.",
        button: "Talk to Us",
      }
    ];

    let index = 0;
    const headlineEl = document.getElementById("cta-headline");
    const subtextEl = document.getElementById("cta-subtext");
    const buttonEl = document.getElementById("cta-button");

    function fadeOutIn(element, newText) {
      element.style.opacity = 0;
      setTimeout(() => {
        element.textContent = newText;
        element.style.opacity = 1;
      }, 500);
    }

    function rotateCTA() {
      index = (index + 1) % ctaData.length;
      fadeOutIn(headlineEl, ctaData[index].headline);
      fadeOutIn(subtextEl, ctaData[index].subtext);
      fadeOutIn(buttonEl, ctaData[index].button);
    }

    setInterval(rotateCTA, 6000); // rotate every 6 seconds
</script>




