<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ukukhawuleza_App_2025</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ukukhawuleza_App_2025.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-3" href="/">
                    <img src="/Logo.png" alt="Ukukhawuleza Logo" class="logo-img" />
                    <span class="brand-name"></span>
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navMenu"
                        aria-controls="navMenu"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navMenu">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Services">Services</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Clientele">Clientele</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="uk-footer">
        <div class="uk-footer-wave"></div>
        <div class="container">
            <!-- Main Footer Content -->
            <div class="uk-footer-main">
                

                    
                    

            <!-- Map Section -->
            <div class="uk-footer-map">
                <div class="map-header">
                    <h4>📍 Find Us Here</h4>
                    <p>Visit our main office location</p>
                </div>
                <div class="map-container">
                    <iframe src="https://www.google.com/maps?q=Stand+no+410,+Badibanise,+Mount+Frere,+5090&output=embed"
                            width="100%"
                            height="200"
                            style="border:0; border-radius: 12px;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                    <div class="map-actions">
                        <a href="https://maps.google.com/?q=Stand+no+410,+Badibanise,+Mount+Frere,+5090" target="_blank" class="btn-map">
                            <span>Get Directions</span>
                            <span class="btn-icon">🧭</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="uk-footer-bottom">
                <div class="footer-bottom-content">
                    <div class="copyright">
                        <p>© @DateTime.Now.Year <strong>Ukukhawuleza Trading Enterprise</strong>. All rights reserved.</p>
                    </div>
                    <div class="footer-badges">
                        <div class="badge">🏆 Quality Guaranteed</div>
                        <div class="badge">⚡ Rapid Service</div>
                        <div class="badge">🤝 Trusted Partner</div>
                    </div>
                </div>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
